<Window x:Class="UI.ProductCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Карточка товара" Height="450" Width="800" MinHeight="350">
    <Grid x:Name="GridPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" MinHeight="31.28"/>
            <!-- 0: Название продукта -->
            <RowDefinition Height="272*" MinHeight="227"/>
            <!-- 1: Изображение и варианты -->
            <RowDefinition Height="50*"/>
            <!-- 2: Кнопки -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- Левая колонка для изображения -->
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
            <!-- Правая колонка для информации -->
        </Grid.ColumnDefinitions>

        <Button Content="Вернуться в каталог" Grid.Row="0" Grid.Column ="0" Margin="10,10,173,10" Click="Button_Click" MaxHeight="20"/>

        <Button Content="перейти в корзину" Grid.Row="0" Grid.Column ="2" Margin="105,10,68,10" MaxHeight="20" Click="Button_Click_1" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="34*" MinHeight="31.28"/>
                <!-- 0: Название продукта -->
                <RowDefinition Height="247*" MinHeight="227"/>
                <!-- 2: Кнопки -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!-- Правая колонка для информации -->
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="NameProduct" Text="{Binding Name}" Grid.Row="1" Grid.Column="0"

       HorizontalAlignment="Left" VerticalAlignment="Top" 
       TextWrapping="Wrap" 
       FontSize="16" FontWeight="Bold" Width="180" Height="47" Margin="10,10,0,0"/>



            <!-- Изображение продукта -->
            <Border Grid.Row="1" Margin="10,57,25,24" CornerRadius="20">
                <Image x:Name="ImageProduct"
   HorizontalAlignment="Center" Width="266"
   Source="C:/Users/BEBERISHKA/Downloads/ShopFlower-main/ShopFlower-main/maxresdefault.jpg" Height="204" VerticalAlignment="Top"/>
            </Border>

        </Grid>



        <!-- Панель для RadioButton (правая колонка) -->
        <StackPanel x:Name="RadioButtonsPanel" Grid.Column="1"
                    Orientation="Vertical" VerticalAlignment="Top"
                    Margin="11,50,9,0" Height="86" Grid.Row="1">
            <!-- RadioButton будут добавляться сюда -->
        </StackPanel>

        <!-- Кнопки -->
        <TextBlock Grid.Row="1" Margin="14,152,21,53" Grid.Column="1" Text="Описание товара:" FontWeight="Bold" FontSize="18" />
        <TextBlock x:Name="DescriptionVariation"  Grid.Column="1" HorizontalAlignment="Left" Margin="12,178,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="53" Width="170" FontSize="14"/>
        <Grid Grid.Row="1" Grid.Column="2"
                    HorizontalAlignment="Center" VerticalAlignment="Top" Height="203" Width="300" Margin="0,10,0,0">
            <Grid.RowDefinitions>

                <RowDefinition Height="100*" MinHeight="31.28"/>
                <RowDefinition Height="40"></RowDefinition>
                <!-- 0: Название продукта -->
                <RowDefinition Height="20" MinHeight="40"/>
                <RowDefinition Height="40"></RowDefinition>
                <!-- 1: Изображение и варианты -->
                <RowDefinition Height="80*"/>
                <!-- 2: Кнопки -->
            </Grid.RowDefinitions>
            <Button x:Name="GoInCard"  Content="В корзину" Click="BuyClickCart" Grid.Row="2" Height="34" Width="130" Visibility="Hidden"/>
            <TextBlock x:Name="CostTextBlock" Text="100 ₽" Height="34" Width="130" FontSize="16" 
                        TextAlignment="Center"  Grid.Row="1"/>
            <Button x:Name="InCardButton" Content="Добавить в корзину" Height="34" Width="130"  Click="AddInCard" Grid.Row="2"/>
            <Button Content="Купить" Height="29" Width="130" Click="BuyClick"  Grid.Row="3"/>
        </Grid>

    </Grid>
</Window>