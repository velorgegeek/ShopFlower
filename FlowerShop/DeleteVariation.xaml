<Window x:Class="UI.DeleteVariation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Удаление вариации" Height="360" Width="610">
    <Grid Height="350" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal" Margin="364,272,52,16" >
            <Button Content="Закрыть" Height="29" Margin="0,0,10,0" Click="Button_Click_1"/>
            <Button Content="Удалить вариацию" Height="29" Click="Button_Click" />


        </StackPanel>

        <ListBox x:Name="VariationList" 
         Margin="0,0,0,78" ItemsSource="{Binding Variations}" Background="White" BorderBrush="LightGray" BorderThickness="1" HorizontalAlignment="Left" Width="556">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#E0E0E0" Margin="5" Padding="10" 
                    Background="White" CornerRadius="10" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <!-- Изображение товара -->
                            <Image Source="{Binding ImagePath}" 
                           Width="100" Height="50" 
                           Stretch="Uniform"
                           Margin="0,0,10,0"/>

                            <StackPanel>
                                <TextBlock Text="{Binding Product.Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description, StringFormat='Описание: {0}'}"/>
                                <TextBlock Text="{Binding Price, StringFormat='Стоимость: {0}₽'}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
