<Window x:Class="UI.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="EditProductWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="NameProduct" Text ="Название Продукта" HorizontalAlignment="Left" Margin="10,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="DesriptionVar" Text ="Описание вариации" HorizontalAlignment="Left" Margin="214,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="212,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="138"><Run Language="ru-ru" Text="Добавление вариации"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="21,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="94"><Run Language="ru-ru" Text="Добавления продукта"/></TextBlock>
        <TextBlock x:Name="PathTextBox" HorizontalAlignment="Left" Margin="212,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="33" RenderTransformOrigin="0.5,0.244"><Run Text="Path Фотографии"/><Run Language="ru-ru"/></TextBlock>
        <Button x:Name="Path" Content="Фотография" HorizontalAlignment="Left" Margin="213,117,0,0" VerticalAlignment="Top" Width="120" Click="path_Click"/>
        <TextBox x:Name="CostVariation" HorizontalAlignment="Left" Margin="212,200,0,0" TextWrapping="Wrap" Text="Цена" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="CreateButton" Content="Создать" HorizontalAlignment="Left" Margin="542,229,0,0" VerticalAlignment="Top" Click="EditProduct_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="481,229,0,0" VerticalAlignment="Top" Width="48"/>
        <ComboBox x:Name="CategoryComboBox" Width="100" Height="40" Margin="15,160,485,84" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
