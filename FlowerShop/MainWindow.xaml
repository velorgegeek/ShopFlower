<Window x:Class="FlowerShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="149*"></RowDefinition>
            <RowDefinition Height="50*"/>

            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="103*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Name ="data" Content="DataGrid" Margin="266,6,0,7"  Click="data_Click" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Button Name="Statistics" Grid.Row="3" Content="Статистика" Margin="0,8,10,8" Click="Statistics_Click"  Grid.Column="1"  />
        <Button Name ="Exit" Grid.Column="1" Content="Выход"  Grid.Row="6" Click="Exit_Click" Grid.ColumnSpan="2" Margin="0,19,266,34"/>
    </Grid>
</Window>
