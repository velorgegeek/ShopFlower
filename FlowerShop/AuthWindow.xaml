<Window x:Class="UI.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="AuthWindow" Height="300" Width="450">
    <Grid>
        <TextBox x:Name="log" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="222" Height="35" Margin="50,69,0,0"/>
        <Button x:Name="logButton" Content="Войти" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="232,209,0,0" Click="logButton_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="161,209,0,0"/>
        <PasswordBox x:Name="PassBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="222" Height="34" Margin="50,142,0,0"/>
        <TextBox x:Name="PassTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="222" Height="34" Margin="50,142,0,0" Visibility="Hidden"/>
        <Button x:Name="PassShow" HorizontalAlignment="Left" Margin="245,149,0,0" VerticalAlignment="Top" Click="PasswordChecker" BorderBrush="White" Foreground="White" Background="White">
            <Image x:Name="PassImage" Source ="Images/passwordShow.png" Height="17" Width="18"/>
        </Button>
    </Grid>
</Window>
