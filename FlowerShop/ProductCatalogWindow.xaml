<Window x:Class="UI.ProductCatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог товаров" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="535*"/>
        </Grid.RowDefinitions>
        <Button Content="В корзину" Grid.Row="0" Grid.Column ="1" Margin="10,10,10,10"/>
        <ListBox x:Name="ProductsListBox" 
          ItemsSource="{Binding Products}"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          BorderThickness="0"
          Background="Transparent"
          Grid.ColumnSpan="2"
          Grid.Row="1"
          SelectionChanged="ProductsListBox_SelectionChanged">

            <!-- Панель расположения элементов -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="6" Rows="0"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.Resources>


            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" 
                     Margin="10" Background="White"
                     Width="130" Height="180">
                        <StackPanel>
                            <!-- Изображение -->
                            <Border Height="100" Background="#F5F5F5">
                                <Image Source="{Binding MainImagePath}" 
                                Stretch="Uniform" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                MaxWidth="180" MaxHeight="100"/>
                            </Border>

                            <!-- Информация -->
                            <StackPanel Margin="8">
                                <TextBlock Text="{Binding Name}" 
                                    FontWeight="SemiBold" 
                                    TextWrapping="Wrap"
                                    Height="40"
                                    Margin="0,0,0,5"/>

                                <TextBlock Text="{Binding Pricevar, StringFormat={}{0}₽}" 
                                    FontWeight="Bold" 
                                    FontSize="14"
                                    Foreground="#E53935"
                                    Margin="0,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>