<Window x:Class="UI.ProductCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="ProductCard" Height="450" Width="800">
    <Grid x:Name="GridPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="31.28"/>
            <!-- 0: Название продукта -->
            <RowDefinition Height="Auto" MinHeight="227"/>
            <!-- 1: Изображение и варианты -->
            <RowDefinition Height="Auto" MinHeight="43"/>
            <!-- 2: Кнопки -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Левая колонка для изображения -->
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <!-- Правая колонка для информации -->
        </Grid.ColumnDefinitions>

        <!-- Название продукта -->
        <TextBlock x:Name="NameProduct" Text="{Binding Name}" Grid.Row="0" Grid.Column="0"
                   HorizontalAlignment="Left" Margin="87,10,0,0" 
                   TextWrapping="Wrap" 
                   FontSize="16" FontWeight="Bold" Width="0"/>


        <!-- Изображение продукта -->
        <Image x:Name="ImageProduct" Grid.Row="1" Grid.Column="0"
               HorizontalAlignment="Left" Height="217" Width="260" 
               Margin="10,10,0,0" VerticalAlignment="Top"
               Source="C:/Users/BEBERISHKA/Downloads/ShopFlower-main/ShopFlower-main/maxresdefault.jpg"/>

        <!-- Панель для RadioButton (правая колонка) -->
        <StackPanel x:Name="RadioButtonsPanel" Grid.Column="1"
                    Orientation="Vertical" VerticalAlignment="Top"
                    Margin="10,10,10,0" Height="76" Grid.Row="1">
            <!-- RadioButton будут добавляться сюда -->
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,32,0,0" Height="34" Width="130">
            <TextBlock x:Name="CostTextBlock" Text="100" Height="34" Width="130" FontSize="16" 
                        TextAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" 
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="50,82,0,0" Height="73" Width="130">
            <Button x:Name="InCardButton" Content="Добавить в корзину" Height="34" Width="130" Margin="0,0,0,10" Click="AddInCard"/>
            <Button Content="Купить" Height="29" Width="130" Click="BuyClick"/>
        </StackPanel>
        <Button x:Name="GoInCard" Grid.Column="2" Content="В корзину" Click="BuyClickCart" HorizontalAlignment="Left" Margin="50,82,0,0" Grid.Row="1" VerticalAlignment="Top" Height="34" Width="130" Visibility="Hidden"/>
    </Grid>
</Window>