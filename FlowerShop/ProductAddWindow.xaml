<Window x:Class="UI.ProductAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="ProductAddWindow" Height="400" Width="417">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143"/>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition Width="264"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock HorizontalAlignment="Left" Margin="21,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="94"><Run Language="ru-ru" Text="Добавления продукта"/></TextBlock>
            <TextBox x:Name="NameProduct" Text ="Название Продукта" Margin ="20,20,0,0"  HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
            <ComboBox x:Name="CategoryComboBox" Width="100" Height="40" Margin ="20,20,0,0"  VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="48,24,10,112">
            <TextBlock HorizontalAlignment="Center" Margin="20,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="138" Grid.Column="1"><Run Language="ru-ru" Text="Добавление вариации"/></TextBlock>
            <TextBox x:Name="DesriptionVar" Text ="Описание вариации" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="30,10,0,0" VerticalAlignment="Top" Width="120" Height="18" Grid.Column="1"/>

            <TextBlock x:Name="PathTextBox" HorizontalAlignment="Left" Margin="30,10,0,0" TextWrapping="Wrap" Width="128" Height="49" RenderTransformOrigin="0.5,0.244" Grid.Column="1"><Run Text="Path Фотографии"/><Run Language="ru-ru"/></TextBlock>
            <Button x:Name="Path" Content="Фотография" HorizontalAlignment="Left" Margin="30,10,0,10" Width="120" Click="path_Click" Height="20" Grid.Column="1"/>
            <TextBox x:Name="CostVariation" HorizontalAlignment="Left"  TextWrapping="Wrap" Margin="30,0,0,0" Text="Цена" VerticalAlignment="Top" Width="122" Height="18" Grid.Column="1"/>
        </StackPanel>
        <Button x:Name="CreateButton" Content="Добавить" HorizontalAlignment="Left" Margin="157,272,0,0" VerticalAlignment="Top" Click="CreateButton_Click" Grid.Column="1" Height="20" Width="58"/>
        <Button Content="Отмена" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Width="48" Grid.Column="1" Height="20"/>

    </Grid>
</Window>
